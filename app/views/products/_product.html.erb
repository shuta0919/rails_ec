<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <%= link_to product_path(product) do %>
      <%= image_tag product.image, :size => '450x300', class: 'card-img-top', alt: product.name if product.image.attached? %>
    <% end %>
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder"><%= product.name %></h5>
        <!-- Product price-->
        <%= number_to_currency(product.price, unit: "å††", format: "%n%u", precision: 0) %>
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center"><%= button_to 'Add to cart', cart_items_path(product_id: product.id, quantity: 1), method: :post %> </div>
    </div>
  </div>
</div>
